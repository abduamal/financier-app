<h1>Edit Transaction</h1>

<%= form_for @transaction, :url =>{:action => "update", :id =>@transaction} do |f| %>

<p>Amount: <%= f.text_field  'amount' %></p>
<p>Category: <%= f.text_field  'category' %></p>
<p>Date: <%= f.select_date()  'date' %></p>
<p>Description<br/>

<%= f.text_area 'description' %></p>
<%= f.submit "Save changes" %>
<% end %>

<%= link_to 'Back', {:action => 'index' } %>